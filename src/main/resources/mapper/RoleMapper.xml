<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.jiuguomall.mapper.RoleMapper">

    <select id="selectByRoleCode"
            parameterType="string"
            resultType="org.example.jiuguomall.entity.Role">
        SELECT
            id,
            role_code,
            role_name
        FROM role
        WHERE role_code = #{roleCode}
        LIMIT 1
    </select>

</mapper>
